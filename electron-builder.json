{
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": ["**/*", "!**/*.ts", "!*.map", "!package.json", "!package-lock.json"],
  "extraResources": [
    {
      "from": "dist",
      "to": "app",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": ["portable"],
    "executableName": "Moi"
  },
  "portable": {},
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "category": "Utility",
    "target": ["AppImage"],
    "artifactName": "${name}.${ext}"
  }
}
